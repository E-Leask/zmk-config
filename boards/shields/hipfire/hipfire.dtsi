#include <dt-bindings/zmk/matrix_transform.h>
#include "hipfire-layouts.dtsi"

//Use this file  to reduce duplication between overlays

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
        // Other chosen items
    };

    kscan0: kscan0 {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";
        wakeup-source;
    };

    pinnacle: pinnacle@0 {
        compatible = "cirque,pinnacle";
        reg = <0 0>; // or the correct I2C/SPI address
        irq-gpios = <&gpio0 2 GPIO_ACTIVE_LOW>;
        reset-gpios = <&gpio0 3 GPIO_ACTIVE_LOW>;
    };


    default_transform: keymap_transform0 {
        compatible = "zmk,matrix-transform";
        columns = <9>;
        rows = <5>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6) RC(0,7) RC(0,8)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6) RC(1,7) RC(1,8)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6) RC(2,7) RC(2,8)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5) RC(3,6) RC(3,7) RC(3,8)
            RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4) RC(4,5) RC(4,6) RC(4,7) RC(4,8)
        >;
    };
};
&physical_layout0 {
    //kscan property only needs to be assigned if some of your physical layouts use different kscans
    kscan = <&kscan0>;
    transform = <&default_transform>;
};
